@model StoreEntities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" name="Name" id="ProductEdit">
    <input type="hidden" name="ID" value="@Model.ID" />
    <label> Name</label>
    <input type="text" name="Name" value="@Model.Name" />
    <label> Description</label>
    <input type="text" name="Description" value="@Model.Description" />
    <label> Price</label>
    <input type="text" name="Price" value="@Model.Price" />

    <button id="updateBtn" type="button">Save</button>

</form>

<script>
    $("#updateBtn").click(function () {
        $.ajax({
            type:"POST",
            url: "/Product/Edit",
            data: $("#ProductEdit").serialize()
        }).done(function (res) {
            $("#ProductContainer").html(res)
            $("#actionContainer").html("")
        }).fail(function () {
            alert("fail")
        })
    })
</script>