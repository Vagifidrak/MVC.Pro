@model List<StoreEntities.Product>
@{
    ViewBag.Title = "ProductTable";
}

<h2>ProductTable</h2>

<form method="get">
    <input type="text" id="searchTxt"/>
    <button type="button" id="searchBtn">Search</button>
</form>
<button id="newBtn">New</button>
<table class="table table-bordered" >
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product  in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>
                    <button class="btnEdit" data-id="@product.ID">Edit</button>
                    <button class="btnDelete" data-id="@product.ID">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#searchBtn").click(function () {
        var searchVal = $("#searchTxt").val()
        $.ajax({
            url: "/Product/ProductTable",
            data: {
                search: searchVal,
            }
        }).done(function (res) {
            $("#ProductContainer").html(res)
        }).fail(function () {
            alert("fail")
        })
    })

    $(".btnEdit").click(function () {
        $.ajax({
            url: "/Product/Edit",
            data: {
                ID: $(this).attr("data-id")
            }
        }).done(function (res) {
            $("#actionContainer").html(res)
        }).fail(function () {
            alert("Əlavə edildi")
        })
    })

    $(".btnDelete").click(function () {
        var confirmDelete = confirm("Silmək fikrində əminsinizmi?");
        if (confirmDelete) {
            $.ajax({
                type: "POST",
                url: "/Product/Delete",
                data: {
                    ID: $(this).attr("data-id")
                }
            }).done(function (res) {
                $("#productContainer").html(res)
            }).fail(function () {
                alert("silindi")
            })
        }
    })
    
    

    $("#newBtn").click(function () {
        $.ajax({
            url: "/Product/Create",
        }).done(function (cr) {
            $("#actionContainer").html(cr)
        }).fail(function () {
            alert("fail")
        })
    })


</script>